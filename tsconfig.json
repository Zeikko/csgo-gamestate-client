{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "src/",
    "strict": true,
    "target": "ES2019",
    "declaration": true,
    "composite": false,
    "declarationMap": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "build", "*.js", "coverage/**", "src/fixtures/**"]
}
